<div class="col-lg-6 col-lg-offset-3">

<form action="/results" method="get" class="form-inline">

  <label for="start_option">Start:</label>
  <select name="start_option" class="form-control input-lg">
    <% $lines.each do |line, stations| line %>
      <optgroup label="<%= line %> line">
        <% stations.each do |station| %>
          <option value="<%= line %>,<%= station %>">
            <%= station %>
          </option>
        <% end %>
      </optgroup>
    <% end %>
  </select>

<label for="end_option">End:</label>
  <select name="end_option" class="form-control input-lg">
    <% $lines.each do |line, stations| %>
      <optgroup label="<%= line %> line">
        <% stations.each do |station| %>
          <option value="<%= line %>,<%= station %>">
            <%= station %>
          </option>
        <% end %>
      </optgroup>
    <% end %>
  </select>
    <button class="btn btn-default btn-lg">Go!</button>
</form>

  <div class="page-header">
    <h3>RESULTS</h3>
  </div>
  <!-- <p>You are getting on at line <%= @start_line.upcase %> stop <%= @start_station %> and getting off at line <%= @end_line.upcase %> stop <%= @end_station %>.</p> -->

    <h4><%= @trip_length %></h4>
    <h4><%= @trip_stations.upcase %>.</h4>

  <div id="journey">
    <% @trip_stations.upcase.split(', ').drop(1).each do |station| %>
        <div class="station_join"></div>
      <div class="station">
        <%= station %>
      </div>
    <% end %>
  </div>
