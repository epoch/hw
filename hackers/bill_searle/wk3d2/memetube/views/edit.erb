<h2>Edit Video</h2>

<form action="/memetube/<%= @video.id %>" method="post">
  <label for="title">Title: </label>
  <input type="text" name="title" placeholder="Title" value="<%= @video.title %>">

  <label for="description">Description: </label>
  <input type="text" name="description" placeholder="Description" value="<%= @video.description %>">

  <label for="url">URL: </label>
  <input type="text" name="url" placeholder="URL" value="<%= @video.url %>">

  <label for="genre">Genre: </label>
  <input type="text" name="genre" placeholder="Genre" value="<%= @video.genre %>">

  <button>Edit Video</button>
</form>