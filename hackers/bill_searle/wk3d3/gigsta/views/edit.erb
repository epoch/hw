<h2>Edit Gig</h2>
<form action="/gigsta/<%= @gig.id %>" method="post">
  <label for="venue">Venue:</label>
    <input type="text" name="venue" placeholder="Venue" value="<%= @gig.venue %>">

  <label for="gigdate">Gig Date:</label>
    <input type="date" name="gigdate" placeholder="Gig Date" value="<%= @gig.gigdate %>">

  <label for="time">Time:</label>
    <input type="time" name="time" placeholder="Time" value="<%= @gig.time %>">

  <label for="address">Address:</label>
    <input type="text" name="address" placeholder="Address" value="<%= @gig.address %>">

<button>Edit This Gig!</button>
</form>

</form>