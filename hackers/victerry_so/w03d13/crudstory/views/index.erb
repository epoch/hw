<div id="container">
<h1>Crud Story</h1>
<form action="/" method="post">
  <label for="name"></label>
  <input type="text" id="name" name="name" placeholder="Name"><br>

  <label for="blog"></label>
  <textarea type="text" rows="3" id="blog" name="blog" placeholder="Post..."></textarea><br>

  <button>Add Story</button>
</form>


  <% @story.reverse.each do |post| %>
    <div class="post">
      <%= post.blog %><hr>
      <div class="comments">
        <%= post.name %>
        <a class="icons" href="/<%= post.id %>"><img class="icons" src="http://icons.iconarchive.com/icons/visualpharm/icons8-metro-style/512/Editing-Edit-icon.png"></a>
        <a class="icons" href="/<%= post.id %>/delete"><img class="icons" src="http://icons.iconarchive.com/icons/visualpharm/icons8-metro-style/512/System-Delete-icon.png"></a>
      </div>
    </div>
  <% end %>
</div>