<%= form_for @work do |f| %>
  <p>
    <%= f.label :title, 'Work Title: ' %>
    <%= f.text_field :title, :autofocus => true %>
  </p>

  <p>
    <%= f.label :year, 'Year: ' %>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.label :medium, 'Medium: ' %>
    <%= f.text_field :medium %>
  </p>

  <p>
    <%= f.label :style, 'Style: ' %>
    <%= f.text_field :style %>
  </p>

  <p>
    <%= f.label :image, "Image URL: " %>
    <%= f.text_field :image %>
  </p>

  <p>
    <%= f.label :artist_id %>
    <%= f.select :artist_id, Artist.all.map { |artist| [artist.name, artist.id] }, :include_blank => true %>
  </p>

  <%= f.submit %>
<% end %>