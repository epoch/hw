<% if params[:family] %>
  <h1><%= params[:family] %>Plants</h1>
<% else %>
  <h1>All Plants, even the ugly ones</h1>
<% end %>

<% @plants.each do |plant| %>
  <div class="plant">
    <h3><a href="/plants/<%= plant.id %>">
      <%= plant.name %>
      </a>
    </h3>
    <img src="<%= plant.image %>">
  </div>
<% end %>